<%
	link_to_html = {:class => "btn btn-link btn_text_always_on_screen", :type => 'button', :rel => "nofollow"}
%>

<% if !current_or_guest_user %>
  <%= render( :layout => 'application/layouts/put_content_in_center_column') do %>
	  <%= link_to t(:login), login_path, link_to_html %>
  <% end %>
<% end -%>

<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= render( :layout => 'application/layouts/put_content_in_center_column') do %>
	  <%= link_to t(:register), new_registration_path(resource_name), link_to_html %>
  <% end %>
<% end -%>

<% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= render( :layout => 'application/layouts/put_content_in_center_column') do %>
	  <%= link_to "Забыли ваш пароль?", new_password_path(resource_name), link_to_html %>
  <% end %>
<% end -%>

<% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= render( :layout => 'application/layouts/put_content_in_center_column') do %>
	  <%= link_to "Не получили инструкции для подтверждения электронной почты?", new_confirmation_path(resource_name), link_to_html %>
  <% end %>
<% end -%>

<% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= render( :layout => 'application/layouts/put_content_in_center_column') do %>
	  <%= link_to "Не получили инструкции по разблокировки аккаунта?", new_unlock_path(resource_name), link_to_html %>
  <% end %>
<% end -%>

<% if devise_mapping.omniauthable? %>
  <%= render( :layout => 'application/layouts/put_content_in_center_column') do %>
	  <%- resource_class.omniauth_providers.each do |provider| %>
	    <%= link_to "Войти с помощью #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), link_to_html %>
	  <% end -%>
  <% end %>
<% end -%>
