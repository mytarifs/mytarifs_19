<% special_operator_name = case @operator.try(:name)
  when 'TELE2'; 'ТЕЛЕ 2';
  when 'Билайн'; 'Beeline';
  when 'МТС'; 'MTS';
  when 'Мегафон'; 'Megafon';
  else
  	@operator.try(:name)
  end 
