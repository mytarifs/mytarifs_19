<% set_meta_tags site: "MyTarifs.ru", reverse: true %>
<% caption = "Все тарифы #{@operator.try(:name)} #{region_and_privacy_tag}: описание, мобильные тарифы #{@operator.try(:name)}" %>
<% title "Тарифы #{@operator.try(:name)} #{region_and_privacy_tag} #{pagination_page_name('tarif_classes_by_operator_page')} - \
