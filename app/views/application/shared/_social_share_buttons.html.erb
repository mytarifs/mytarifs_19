<script type="text/javascript" src="https://yastatic.net/share2/share.js" async="async" charset="utf-8"></script>
<%= render( :layout => 'application/layouts/put_content_in_center_column') do %>
	<div class="input-group center-block">
	  <div class="btn-group">
		  <a class="btn btn-warning social_share_group_share" disabled id="social_share_group">Поделиться страницей</a>
	  </div>
	  <%= content_tag(:div, {:class => "btn-group", :"aria-describedby" => "social_share_group",  :onclick => set_target('social_share_buttons')}) do %>	
			<div class="ya-share2" 
				 data-services="vkontakte,twitter,facebook,odnoklassniki,linkedin,gplus"
			  	 data-copy="last"
			     data-limit="5" 				 
			  	 <%= ((true or user_type == :admin) ? "data-counter" : "") %>
			  	 <%= ((local_assigns[:data_url] and data_url) ? "data-url=#{data_url}" : "") %>
			     >
			 </div>
	  <% end %>
	</div>
<% end %>
